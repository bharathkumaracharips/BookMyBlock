{
  "name": "bookmyblock-platform",
  "version": "1.0.0",
  "description": "Decentralized ticketing platform on Polygon",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "dev": "concurrently \"npm run dev -w @bookmyblock/frontend\" \"npm run dev -w @bookmyblock/backend\"",
    "dev:frontend": "npm run dev -w @bookmyblock/frontend",
    "dev:backend": "npm run dev -w @bookmyblock/backend",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "jspdf": "^3.0.1"
  }
}
